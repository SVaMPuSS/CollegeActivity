<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="153dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#4CAF50">

    <View
        android:id="@+id/vAfterDate"
        android:layout_height="50dp"
        android:layout_width="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="#1A000096"/>

    <TextView
        android:id="@+id/tvEventDate"
        android:layout_height="wrap_content"
        android:layout_width="80dp"
        app:layout_constraintTop_toTopOf="@id/vAfterDate"
        app:layout_constraintLeft_toLeftOf="@id/vAfterDate"
        app:layout_constraintRight_toRightOf="@id/vAfterDate"
        app:layout_constraintBottom_toBottomOf="@id/vAfterDate"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:text="20.12.00"/>

    <View
        android:id="@+id/vAfterTime"
        android:layout_height="100dp"
        android:layout_width="100dp"
        app:layout_constraintTop_toBottomOf="@id/vAfterDate"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="#007FC8"/>

    <TextView
        android:id="@+id/tvEventTimeStart"
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="@id/vAfterTime"
        app:layout_constraintLeft_toLeftOf="@id/vAfterTime"
        app:layout_constraintBottom_toTopOf="@id/tvEventTimeEnd"
        app:layout_constraintRight_toRightOf="@id/vAfterTime"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:text="16:00"/>

    <TextView
        android:id="@+id/tvEventTimeEnd"
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvEventTimeStart"
        app:layout_constraintLeft_toLeftOf="@id/vAfterTime"
        app:layout_constraintBottom_toBottomOf="@id/vAfterTime"
        app:layout_constraintRight_toRightOf="@id/vAfterTime"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:text="21:00"/>

    <View
        android:id="@+id/vAfterName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/vAfterDate"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tvEventName"
        android:background="#2196F3"/>

    <View
        android:id="@+id/vAfterDivision"
        android:layout_height="50dp"
        android:layout_width="100dp"
        app:layout_constraintBottom_toBottomOf="@id/tvEventTimeEnd"
        app:layout_constraintTop_toBottomOf="@id/tvEventName"
        app:layout_constraintLeft_toRightOf="@id/vAfterTime"
        app:layout_constraintRight_toLeftOf="@id/vAfterPerName"
        android:background="#2167F3"/>

    <View
        android:id="@+id/vAfterPerName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/vAfterDivision"
        app:layout_constraintBottom_toBottomOf="@id/tvEventTimeEnd"
        app:layout_constraintLeft_toRightOf="@id/vAfterDivision"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#21DAF3"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/vAfterDivision"
        app:layout_constraintLeft_toLeftOf="@id/vAfterDivision"
        app:layout_constraintRight_toRightOf="@id/vAfterDivision"
        app:layout_constraintBottom_toBottomOf="@id/vAfterDivision"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:text="some some some text"/>

    <TextView
        android:id="@+id/tvEventPesName"
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="@id/vAfterPerName"
        app:layout_constraintBottom_toBottomOf="@id/vAfterPerName"
        app:layout_constraintLeft_toLeftOf="@id/vAfterPerName"
        app:layout_constraintRight_toRightOf="@id/vAfterPerName"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:text="Окладникова М Н"/>

    <TextView
        android:id="@+id/tvEventName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/vAfterDivision"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/vAfterDate"
        android:gravity="left|top"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:text="  some some some text some some some text some some some text some some some text some some some text some some some text some some some text"/>

    <Button
        android:id="@+id/bItemChange"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#009688"
        android:layout_margin="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:text="X"/>

    <Button
        android:id="@+id/bItemDelete"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#009688"
        android:layout_margin="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/bItemChange"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:text="I"/>

</androidx.constraintlayout.widget.ConstraintLayout>